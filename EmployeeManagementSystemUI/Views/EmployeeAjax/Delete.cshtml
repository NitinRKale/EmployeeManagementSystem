@model EmployeeManagementSystemUI.Models.EmployeeMaster

@{
    ViewData["Title"] = "Delete";
}

<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Add Employee</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmpFirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmpFirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmpMiddleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmpMiddleName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmpLastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmpLastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmpGender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmpGender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Salary)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Salary)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmpStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmpStatus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DepartmentMaster)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DepartmentMaster.DepartmentName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DesignationMaster)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DesignationMaster.DesignationName)
            </dd>
        </dl>

        <form>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmpId" />
            <input id="btnDelete" type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </form>
        <!-- /.row -->
    </div>
</div>

@section Scripts {
    <script src="~/js/EmployeeControllerAjaxHandler.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
