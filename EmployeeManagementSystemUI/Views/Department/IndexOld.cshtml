@model IEnumerable<EmployeeManagementSystemUI.Models.DepartmentMaster>

@{
    ViewData["Title"] = "Index";
}

<h5>List Of Departments</h5>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.DepartmentId">Edit</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.DepartmentId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DepartmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
