@model EmployeeManagementSystemUI.Models.DesignationMaster2

@{
    ViewData["Title"] = "Delete Designation";
}

<h2>Delete Designation</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.DesignationName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.DesignationId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.DesignationName</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DesignationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>