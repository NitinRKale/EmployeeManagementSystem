@model EmployeeManagementSystemUI.Models.DepartmentMaster

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<h4>Are you sure you want to delete this?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Department Id</dt>
        <dd class="col-sm-10">@Model.DepartmentId</dd>
        <dt class="col-sm-2">Department Name</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DepartmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>