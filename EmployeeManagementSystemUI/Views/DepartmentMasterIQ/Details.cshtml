@model EmployeeManagementSystemUI.Models.DepartmentMaster

@{
    ViewData["Title"] = "Department Details";
}

<h2>Department Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Department Id</dt>
        <dd class="col-sm-10">@Model.DepartmentId</dd>
        <dt class="col-sm-2">Department Name</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>